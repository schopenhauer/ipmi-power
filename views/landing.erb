<form action="/" method="post">

  <img src="/favicon.png" alt="" />

  <h1><%= IPMI_NAME %> launcher</h1>

  <p>The system is currently switched <%= power_state ? 'on' : 'off' %>.</p>

  <div class="input-group">
    <button type="submit" name="power" value="<%= power_state ? '0' : '1' %>" onclick="return confirm(this.innerText+'?');" class="btn btn-<%= power_state ? 'danger' : 'success' %>">
      Power <%= power_state ? 'off' : 'on' %>
    </button>
  </div>

</form>
